.no-touch .link:hover:after
  animation-name link
  animation-duration 1s
  animation-timing-function ease-out-quad

@keyframes link
  0%
    transform-origin 100% 0
    transform scaleX(1)
  0.1%
    transform-origin 100% 0
    transform scaleX(1)
  50%
    transform-origin 100% 0
    transform scaleX(0)
  50.1%
    transform-origin 0% 0
    transform scaleX(0)
  100%
    transform-origin 0% 0
    transform scaleX(1)
